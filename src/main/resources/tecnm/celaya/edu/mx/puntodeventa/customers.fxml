<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="tecnm.celaya.edu.mx.puntodeventa.controller.CustomerController">
    <center>
        <TableView fx:id="table" prefHeight="300" prefWidth="400">
            <columns>
                <TableColumn text="ID" fx:id="colId" />
                <TableColumn text="First Name" fx:id="colFirstName" />
                <TableColumn text="Last Name" fx:id="colLastName" />
                <TableColumn text="Email" fx:id="colEmail" />
                <TableColumn text="Phone" fx:id="colPhone" />
                <TableColumn text="Address" fx:id="colAddress" />
                <TableColumn text="Gender" fx:id="colGender" />
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="txtFirstName" promptText="First Name"/>
            <TextField fx:id="txtLastName" promptText="Last Name"/>
            <TextField fx:id="txtEmail" promptText="Email"/>
            <TextField fx:id="txtPhone" promptText="Phone"/>
            <TextField fx:id="txtAddress" promptText="Address"/>
            <TextField fx:id="txtGender" promptText="Gender"/>
            <Button text="Add" onAction="#onAddCustomer"/>
        </HBox>
    </bottom>
</BorderPane>

